{
  "logger": {
    "level": "debug",
    "timestamp": false,
    "colorize": true
  },
  "esclient": {
    "apiVersion": "5.6",
    "hosts": [
      {
        "host": "elasticsearch"
      }
    ]
  },
  "elasticsearch": {
    "settings": {
      "index": {
        "refresh_interval": "10s",
        "number_of_replicas": "0",
        "number_of_shards": "1"
      }
    }
  },
  "acceptance-tests": {
    "endpoints": {
      "docker": "http://api:4000/v1/"
    }
  },
  "api": {
    "textAnalyzer": "libpostal",
    "targets": {
      "canonical_sources": ["transit","whosonfirst", "openstreetmap", "openaddresses", "geonames"],
      "layers_by_source": {
        "transit": ["stops"]
      }
    },
    "defaultParameters": {
      "focus.point.lat": 46.063442,
      "focus.point.lon": 11.156744
    },
    "customBoosts": {
      "layer": {
      	"street": 1,
        "address": 3
      },
      "source": {
        "transit": 1,
        "openstreetmap": 1,
        "openaddresses": 3,
        "whosonfirst":1
      }
    },
    "services": {
      "placeholder": {
        "url": "http://placeholder:4100"
      },
      "pip": {
        "url": "http://pip:4200"
      },
      "interpolation": {
        "url": "http://interpolation:4300"
      },
      "libpostal": {
        "url": "http://libpostal:4400"
      }
    }
  },
  "imports": {
    "adminLookup": {
      "enabled": true
    },
    "whosonfirst": {
      "datapath": "/data/whosonfirst",
      "importVenues": false,
      "importPostalcodes": true,
      "importPlace": [
        "85685277"
      ]
    },
	"openstreetmap": {
      "download": [
        {
          "sourceURL": "http://geodati.fmach.it/gfoss_geodata/osm/output_osm_regioni/trentino-alto-adige.pbf"
        }
      ],
      "leveldbpath": "/tmp",
      "datapath": "/data/openstreetmap",
      "import": [
        {
          "filename": "trentino-alto-adige.osm.pbf"
        }
      ]
    },
    "polyline": {
      "datapath": "/data/polylines",
      "files": [ "extract.0sv" ]
    },
    "openaddresses": {
      "datapath": "/data/openaddresses",
      "files": ["trento_civici.csv","rovereto_civici.csv"]
    },
    "transit": {
      "datapath": "/data/transit",
      "feeds": [
        {
          "layerId": "stops",
          "url": "http://www.ttesercizio.it/opendata/google_transit_urbano_tte.zip",
          "filename": "stops.txt",
          "agencyId": "tte",
          "agencyName": "trentino trasporti esercizio",
          "layerName": "stop"
        }
      ]
    }
  }
}
